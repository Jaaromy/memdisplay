{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"globals": {
		"it": false,
		"expect": false,
		"describe": false
	},
	"rules": {
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-var": "error",
		"no-console": "off",
		"no-useless-escape": "warn"
	}
}
